<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- add code about new servlet-->
    <servlet>
        <servlet-name>anyName</servlet-name><!--give any name-->
        <servlet-class>com.CaoYanghua.week2.demo.HelloWorldServlet</servlet-class><!--package+name of servlet class-->
    </servlet>
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.CaoYanghua.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>
    <!--automatic code-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.CaoYanghua.week3.demo.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <servlet-class>com.CaoYanghua.week4.demo.JDBCDemoServlet</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:sqlserver://localhost:databaseName=userdb</param-value>
        </init-param>
        <init-param>
            <param-name>username</param-name>
            <param-value>sa</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>1354437507cl</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>anyName</servlet-name>
        <url-pattern>/hello</url-pattern><!--url must start with -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/life</url-pattern><!--url must start with -->
        <!--/life ==LifeCycleServlet == com.CaoYanghua.week3.demo.LifeCycleServlet -->
    </servlet-mapping>
    <!-- x=5,a=x,so we can say a=5
    so hello==com.CaoYanghua.week2.demoHelloWorldServlet-->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern><!-- write this url in action-->
    </servlet-mapping>
</web-app>